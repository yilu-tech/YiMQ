{
  "name": "yimq",
  "version": "0.2.7",
  "description": "YiMQ is an easy-to-use open source distributed transaction solution.",
  "author": "yilu-tech",
  "license": "Apache License, Version 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/yilu-tech/YiMQ"
  },
  "bin": {
    "yimq": "./dist/Commands/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pm2:watch": "tsc --watch",
    "pm2:dev": "LOG_LEVEL=debug pm2 start dist/src/main.js --name yimq --no-daemon --watch",
    "docker:build": "docker build -t yimq .",
    "docker:run": "docker run --name yimq --hostname yimq -v $(pwd)/config:/apps/config yimq",
    "pkgfiles": "pkgfiles"
  },
  "dependencies": {
    "@caporal/core": "^2.0.2",
    "@grpc/proto-loader": "^0.5.5",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/microservices": "^7.0.7",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/platform-fastify": "^7.0.7",
    "bull": "^3.18.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "date-fns": "^2.4.1",
    "grpc": "^1.24.4",
    "ioredis": "^4.17.3",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "nohm": "^2.2.3",
    "pino": "^6.7.0",
    "pm2": "^4.2.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/bull": "^3.14.4",
    "@types/express": "^4.17.3",
    "@types/ioredis": "^4.0.12",
    "@types/jest": "25.1.4",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.1",
    "@types/pino": "^6.3.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "axios-mock-adapter": "^1.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "pkgfiles": "^2.3.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
